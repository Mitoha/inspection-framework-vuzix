<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1"
    android:orientation="vertical" >

    <Button
        android:id="@+id/buttonOk"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_action_accept"
        android:nextFocusRight="@+id/buttonError"
        android:onClick="onClickStateSetter"
        android:tag="buttonOk"
        android:text="Mark Task as OKAY"
        android:textSize="24sp" >

        <requestFocus />
    </Button>

    <Button
        android:id="@+id/buttonError"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_action_error"
        android:onClick="onClickStateSetter"
        android:tag="buttonError"
        android:text="Mark Task as ERROR"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvTaskDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="@+id/tvTaskDescription"
        android:textSize="24sp" />

</LinearLayout>