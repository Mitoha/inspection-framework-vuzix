<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvAssignmentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@+id/tvAssignmentName"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvAssignmentStartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@+id/tvAssignmentStartDate"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvAssignmentDueDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@+id/tvAssignmentDueDate"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvAssignmentInspObj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@+id/tvAssignmentInspObj"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvAssignmentDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@+id/tvAssignmentDescription"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="24sp" />
    </LinearLayout>

</ScrollView>